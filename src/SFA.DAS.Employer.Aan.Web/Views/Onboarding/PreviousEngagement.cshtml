@using SFA.DAS.Employer.Aan.Web.Models.Onboarding
@model PreviousEngagementViewModel
@{
    ViewData["Title"] = "Engagement with apprenticeship ambassadors";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_validationSummary" />
        <form method="post">
            @Html.HiddenFor(m => m.EmployerAccountId)
            <fieldset class="govuk-fieldset">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-heading-l">
                        Engagement with apprenticeship ambassadors
                    </h1>
                    <p>
                        We’re interested in whether you’ve met an apprenticeship ambassador before. This helps us understand our impact.
                    </p>
                    <p>
                        You may have met an apprenticeship ambassador:
                    </p>
                </legend>
                <ul class="govuk-list govuk-list--bullet govuk-!-margin-left-3">
                    <li>at an in-person event</li>
                    <li>at an online event</li>
                    <li>on social media</li>
                    <li>talking to a current ambassador where you work</li>
                </ul>
                <div esfa-validation-marker-for="HasPreviousEngagement" class="govuk-form-group">
                    <h2 class="govuk-heading-m">
                        Have you met another apprenticeship ambassador before?
                    </h2>
                    <span asp-validation-for="HasPreviousEngagement" class="govuk-error-message"></span>
                    <div id="HasPreviousEngagement-options" class="govuk-radios" data-module="govuk-radios">
                        <div class="govuk-radios__item">
                            <input asp-for="HasPreviousEngagement" class="govuk-radios__input" type="radio" value="true"
                                   sfa-validationerror-class="form-control-error">
                            <label class="govuk-label govuk-radios__label" for="HasPreviousEngagement">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input asp-for="HasPreviousEngagement" id="No" class="govuk-radios__input" type="radio" value="false"
                                   sfa-validationerror-class="form-control-error">
                            <label class="govuk-label govuk-radios__label" for="No">
                                No
                            </label>
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="govuk-button-group">
                <button id="continue" type="submit" class="govuk-button" data-module="govuk-button" data-disable-on-submit="true">
                    Continue
                </button>
            </div>
        </form>
    </div>
</div>