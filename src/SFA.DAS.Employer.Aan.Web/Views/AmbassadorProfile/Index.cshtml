@using SFA.DAS.Employer.Aan.Web.Models.AmbassadorProfile;
@model AmbassadorProfileViewModel
@{
    ViewData["Title"] = "Your ambassador profile";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @if (ViewBag.YourAmbassadorProfileSuccessMessage != null)
        {
            <div class="govuk-notification-banner govuk-notification-banner--success" role="alert" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
                <div class="govuk-notification-banner__header">
                    <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                        Success
                    </h2>
                </div>
                <div class="govuk-notification-banner__content">
                    <h3 class="govuk-notification-banner__heading">
                        <b>You have successfully updated your ambassador profile.</b>
                    </h3>
                </div>
            </div>
        }
        <h1 class="govuk-heading-xl">Your ambassador profile</h1>
        <p>
            You can <a class="govuk-link govuk-link--no-visited-state govuk-link" href="@Model.MemberProfileUrl" target="_blank">view your current ambassador profile</a>. You can
            add or change the information that we hold and choose what you display on your profile.
        </p>

        @{
            await Html.RenderPartialAsync("PersonalDetails", Model.PersonalDetails);
        }

        @{
            await Html.RenderPartialAsync("InterestInTheNetwork", Model.InterestInTheNetwork);
        }

        @{
            if (Model.ShowApprenticeshipDetails)
            {
                await Html.RenderPartialAsync("ApprenticeshipInformation", Model.ApprenticeshipDetails);
            }
        }

        @{
            await Html.RenderPartialAsync("ContactDetails", Model.ContactDetails);
        }

    </div>
</div>